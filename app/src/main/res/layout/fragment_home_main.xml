<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".presentation.ui.home.HomeActivity">

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/NavigationTabTextAppearance"
            app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TITLE_TAB_ITEM_LEFT" />

        <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TITLE_TAB_ITEM_RIGHT" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>